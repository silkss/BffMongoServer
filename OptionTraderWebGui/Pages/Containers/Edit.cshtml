@page "{id?}"
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<div>
    <h1>@ViewData["Title"]</h1>
    <form method="post">
        <p>
            <label asp-for="Instrument!.Name">Имя инструмента:</label><br />
            <input asp-for="Instrument!.Name" />
        </p>

        <p>
            <label asp-for="Instrument!.Name">Биржа:</label><br />
            <input asp-for="Instrument!.Exchange" />
        </p>

        <p>
            <label asp-for="ContainerSettings!.Account">Аккаунт</label><br/>
            <select asp-for="ContainerSettings!.Account"  asp-items="Model.AccountsSL"></select>
        </p>

        <p>
            <label asp-for="ContainerSettings!.OrderPriceShift">Сдвиг цены ордеров (в пунктах)</label><br/>
            <input asp-for="ContainerSettings!.OrderPriceShift" />
        </p>

        <p>
            <label asp-for="OptionStrategySettings!.Volume">Объем</label><br/>
            <input asp-for="OptionStrategySettings!.Volume" />
        </p>

        <p>
           <label asp-for="OptionStrategySettings!.StrategyTargetPnl">Target PnL</label><br/> 
           <input asp-for="OptionStrategySettings!.StrategyTargetPnl" />
        </p>

        <p>
           <label
                title="Минимальное кол-во дней до дня экспирации опционного класса."
                asp-for="OptionStrategySettings!.MinDaysToExpiration">Дней до экспирации</label><br/> 
           <input asp-for="OptionStrategySettings!.MinDaysToExpiration"/>
        </p>

        <p>
            <label 
                title="На сколько шагов-страйка будет сдвинут страйк покупного опциона относительно цены базиса"
                asp-for="SpreadSettings!.BuyStrikeShift">Сдвиг покупного страйка (в шагах)</label><br/>
            <input asp-for="SpreadSettings!.BuyStrikeShift" />
        </p>

        <p>
            <label
                title="На сколько шагов-страйка будет сдвинут страйк продаваемого опциона относительно цены базиса"
                asp-for="SpreadSettings!.SellStrikeShift">Сдвиг продаваемого страйка (в шагах)</label><br/>
            <input asp-for="SpreadSettings!.SellStrikeShift" />
        </p>

        <p>
            <label 
                title="На сколько шагов-страйка будет сдвинут страйк покупного опциона относительно цены базиса"
                asp-for="ClosureSpreadSettings!.BuyStrikeShift">Сдвиг замыкающего покупного страйка (в шагах)</label><br/>
            <input asp-for="ClosureSpreadSettings!.BuyStrikeShift" />
        </p>

        <p>
            <label
                title="На сколько шагов-страйка будет сдвинут страйк продаваемого опциона относительно цены базиса"
                asp-for="ClosureSpreadSettings!.SellStrikeShift">Сдвиг замыкающего продаваемого страйка (в шагах)</label><br/>
            <input asp-for="ClosureSpreadSettings!.SellStrikeShift" />
        </p>

        <input type="submit" />
    </form>
</div>