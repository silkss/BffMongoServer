@page "{id?}"
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<div>
    <h1>@ViewData["Title"]</h1>
    <form method="post">
        <p>
            <label asp-for="Instrument!.Name">Имя инструмента:</label><br />
            <input asp-for="Instrument!.Name" />
        </p>

        <p>
            <label asp-for="Instrument!.Name">Биржа:</label><br />
            <input asp-for="Instrument!.Exchange" />
        </p>

        <p>
            <label asp-for="Settings!.Account">Аккаунт</label><br/>
            <select asp-for="Settings!.Account"  asp-items="Model.AccountsSL"></select>
        </p>

        <p>
            <label asp-for="Settings!.OrderPriceShift">Сдвиг цены ордеров (в пунктах)</label><br/>
            <input asp-for="Settings!.OrderPriceShift" />
        </p>

        <p>
            <label asp-for="Settings!.Volume">Объем</label><br/>
            <input asp-for="Settings!.Volume" />
        </p>


        <p>
           <label
                title="Минимальное кол-во дней до дня экспирации опционного класса."
                asp-for="Settings!.MinDaysToExpiration">Дней до экспирации</label><br/> 
           <input asp-for="Settings!.MinDaysToExpiration"/>
        </p>

        <p>
            <label 
                title="На сколько шагов-страйка будет сдвинут страйк покупного опциона относительно цены базиса"
                asp-for="Settings!.BaseBuyStrikeShift">Сдвиг покупного страйка (в шагах)</label><br/>
            <input asp-for="Settings!.BaseBuyStrikeShift" />
        </p>

        <p>
            <label
                title="На сколько шагов-страйка будет сдвинут страйк продаваемого опциона относительно цены базиса"
                asp-for="Settings!.BaseSellStrikeShift">Сдвиг продаваемого страйка (в шагах)</label><br/>
            <input asp-for="Settings!.BaseSellStrikeShift" />
        </p>

        <p>
            <label 
                title="На сколько шагов-страйка будет сдвинут страйк покупного опциона относительно цены базиса"
                asp-for="Settings!.ClosureBuyStikeShift">Сдвиг замыкающего покупного страйка (в шагах)</label><br/>
            <input asp-for="Settings!.ClosureBuyStikeShift" />
        </p>

        <p>
            <label
                title="На сколько шагов-страйка будет сдвинут страйк продаваемого опциона относительно цены базиса"
                asp-for="Settings!.ClosureSellStikeShift">Сдвиг замыкающего продаваемого страйка (в шагах)</label><br/>
            <input asp-for="Settings!.ClosureSellStikeShift" />
        </p>

        <input type="submit" />
    </form>
</div>