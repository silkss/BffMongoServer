<Window x:Class="GuiStandAlone.Views.Dialogs.ConnectorDialogs.ConnectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuiStandAlone.Views.Dialogs.ConnectorDialogs"
        mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="ConnectDialog" MinHeight="170" Height="170"
        MinWidth="350" Width="350">
    <StackPanel>
        <UniformGrid Rows="1">
            <TextBlock Text="Host"/>
            <TextBox Text="{Binding ConnInfo.Host}"/>
        </UniformGrid>

        <UniformGrid Rows="1">
            <TextBlock Text="Port"/>
            <TextBox Text="{Binding ConnInfo.Port}"/>
        </UniformGrid>

        <UniformGrid Rows="1">
            <TextBlock Text="ClientID"/>
            <TextBox Text="{Binding ConnInfo.ClientId}"/>
        </UniformGrid>
        
        <UniformGrid Rows="1">
            <Button Content="Connect" Click="Connect_Click"/>
            <Button Content="Disconnect" Click="Disconnect_Click"/>
            <Button Content="Close"/>
        </UniformGrid>
    </StackPanel>
</Window>
