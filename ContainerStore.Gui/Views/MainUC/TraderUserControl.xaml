<UserControl x:Class="ContainerStore.Gui.Views.MainUC.TraderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContainerStore.Gui.Views.MainUC"
             xmlns:vm="clr-namespace:ContainerStore.Gui.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:TraderViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <UniformGrid Rows="1">
            <Button Content="Stop" Command="{Binding Stop}"
                    CommandParameter="{Binding ElementName=dgContainersInTrade,Path=SelectedItem}"/>
            <Button Content="Details"/>
            <Button Content="Refresh" Command="{Binding Refresh}"/>
        </UniformGrid>
        <DataGrid Grid.Row="1" x:Name="dgContainersInTrade"
                  ItemsSource="{Binding ContainersInTrade}" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Account" Binding="{Binding Account}"/>
                <DataGridTextColumn Header="Instrument" Binding="{Binding ParentInstrument.FullName}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
