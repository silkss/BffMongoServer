<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="MainFont">
        Segoe UI
    </FontFamily>
    <Color x:Key="MainColor">
        #FDFAD0
    </Color>

    <Color x:Key="SecondColor">
        #C1BFA0
    </Color>

    <SolidColorBrush x:Key="MainBrush" Color="{StaticResource MainColor}"/>
    <SolidColorBrush x:Key="SecondBrush" Color="{StaticResource SecondColor}" Opacity=".6"/>

    <DropShadowEffect x:Key="MainShadow"  ShadowDepth="0"/>

    <Border x:Key="MainCorneredBorder" CornerRadius="6"/>
    
</ResourceDictionary>